---
interface Props {
    title: string
}
const { title } = Astro.props;
---

<div class="card">
    <div class="title-section">
        <h2>{title}</h2>
    </div>
    
    <div class="skills">
        <slot/>
    </div>
</div>


<style>

    .card { 
        width: 300px;
        height: 500px;
        border-radius: 10px;
        background: #1C191D;
    }

    .title-section {
        width: 100%;
        height: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #434343;
        border-radius: 5px;
    }

    .title-section > h2 {
        font-size: 1.8rem;
        color: #fff;
    }

    .skills {
        padding: 2rem;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        justify-items: center;
        align-items: center;
    }

</style>