---
interface Props {
    title: string
}

const {title} = Astro.props;

---

<div class="title-box">
    <h1>{title}</h1>
</div>


<style>
    .title-box {
        width: 100px;
        height: 30px;
        display: flex;
        border-radius: 10px;
        background-color: #B44CE4;
        align-items: center;
        justify-content: center;
    }

    h1 {
        color: #fff;
        text-align: center;
    }
</style>