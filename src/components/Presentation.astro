---

import SmallButton from './smallButton.astro'

interface Props {
    title: string
    cargo: string
    description: string
}

const {title, cargo, description} = Astro.props
---

<section>
    <div class="my-image">
        <img src="" alt="imagen de presentacion">
    </div>


    <div class="desc-n-buttons">

        <div class="title-n-desc">
            <h1>{title}</h1>
            <h3>{cargo}</h3>
            <p>{description}</p>
        </div>

        <div class="buttons-container">
            <SmallButton title='twitter'/>
            <SmallButton title='github'/>
            <SmallButton title='Linkedin'/>
            <SmallButton title='CV'/>
        </div>
    </div>
</section>

<style>
    section {
        display: flex;
        margin: 2rem 0;
    }

    .my-image {
        width: 40%;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .my-image > img {
        width: 100%;
    }

    .desc-n-buttons {
        display: block;
        margin-left: 10%;
    }
    
    .title-n-desc > h1 {
        font-size: 3rem;
    }
    
    .title-n-desc > h3 {
        font-size: 2rem;
    }
    .title-n-desc > p {
        font-size: 1rem;
    }

    .buttons-container {
        display: flex;
        margin: auto;

    }


</style>