<style>
    nav {
        height: 50px;
        width: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px 0 10px;
    
        color: white;
        background: #212121;
    }

    ul {
        display: flex;
        padding: 0;
    }

    ul > li {
        border: 1px solid ;
        display: flex;
        border-radius: 10px;
        width: 150px;
        height: 50px;
        text-align: center;
        justify-content: center;
        align-items: center;
        margin: 10px;
    }

    li > a {
        width: 100%;
        color: white;
        font-size: 2rem;
        text-decoration: none;
    }

    button {
        width: 150px;
        height: 50px;
        text-align: center;
        border-radius: 10px;
    }

</style>