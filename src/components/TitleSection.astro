---
interface Props {
    title: string
}

const { title } = Astro.props;
---

<div class="title-container">
    <h1>
        {title}
    </h1>
</div>


<style>

    .title-container {
        width: 400px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;

        border: 3px solid #B44CE4;
        border-radius: 10px;
    }

    h1 {
        text-align: center;
        width: 100%;
        font-size: 2rem;
        color: #B44CE4;
        margin: 0;
    }
@media (max-width: 1366px) {
    .title-container {
        width: 350px;
        height: 45px;
    }

    h1 {
        font-size: 1.8rem;
    }
}

@media (max-width: 720px) {
    .title-container {
        width: 300px;
        height: 40px;
    }

    h1 {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .title-container {
        width: 250px;
        height: 35px;
    }

    h1 {
        font-size: 1.2rem;
    }
}
</style>